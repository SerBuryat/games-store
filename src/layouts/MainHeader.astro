---
import { Image } from "astro:assets";
---

<header>
    <div class="header">
        <div class="header-logo">
            <Image
                src={"/games-store-logo-removebg-preview.png"}
                alt={"No image :("}
                width="100"
                height="65"
                format="jpg"
                quality={100}
            />
        </div>
        <div class="header-menu-container">
            <ul>
                <li><a href="#">Games</a></li>
                <li><a href="#">Profile</a></li>
                <li><a href="#">Contacts</a></li>
            </ul>
        </div>
        <div class="nav-ham">
            <button
                class="nav-ham-btn"
                onclick="document.getElementById('hide-me').style.display = 'flex'"
            >
                <svg
                    fill="#fff"
                    width="50px"
                    height="50px"
                    viewBox="0 0 16 16"
                    xmlns="http://www.w3.org/2000/svg"
                    xmlns:xlink="http://www.w3.org/1999/xlink"
                    ><title>icn/menu</title><path
                        d="M2 3h12a1 1 0 0 1 0 2H2a1 1 0 1 1 0-2zm0 4h12a1 1 0 0 1 0 2H2a1 1 0 1 1 0-2zm0 4h12a1 1 0 0 1 0 2H2a1 1 0 0 1 0-2z"
                        id="a"></path></svg
                >
            </button>
        </div>
        <div id="hide-me" class="popup-header-menu-container">
            <div>
                <button
                    class="close-popup-header-menu-container-btn"
                    onclick="document.getElementById('hide-me').style.display = 'none'"
                >
                    <svg
                        width="50px"
                        height="50px"
                        viewBox="0 0 48 48"
                        xmlns="http://www.w3.org/2000/svg"
                        ><title>70 Basic icons by Xicons.co</title><path
                            d="M41,43a2,2,0,0,1-1.41-.59L5.62,8.44A2,2,0,0,1,8.44,5.62L42.38,39.56A2,2,0,0,1,41,43Z"
                            fill="#fbbb43"></path><path
                            d="M7,43a2,2,0,0,1-1.41-3.41L39.56,5.62a2,2,0,0,1,2.83,2.83L8.44,42.38A2,2,0,0,1,7,43Z"
                            fill="#fbbb43"></path></svg
                    >
                </button>
            </div>
            <ul>
                <li><a href="#">Games</a></li>
                <li><a href="#">Profile</a></li>
                <li><a href="#">Contacts</a></li>
            </ul>
        </div>
    </div>
</header>
